            <string>// animacion
s_ani_osci(id, 0, m_ani_monsters, 0.1);
// ejecutar accion especial
reloj_accion -= dlt;
if reloj_accion &lt;= 0 {
    reloj_accion += m_reloj_accion + random(1);
    if despierto {
        // buscar lugar de mineria y promedio de mineros
        var yo = id;
        var mej = s_minar(minax, minay);
        var sum = 0;
        var tot = 0;
        with o_alma {
            if culpa == m_culpa_codicia {
                sum += tesoro;
                tot++;
                if tesoro &gt; mej {
                    mej = tesoro;
                    yo.minax = minax;
                    yo.minay = minay;
                    s_voz(yo.x, yo.y, m_culpa_codicia, true);
                }
            }
        }
        // eliminar mineros
        if tot != 0 {
            sum /= tot;
            sum *= 0.75;
            with o_alma {
                if culpa == m_culpa_codicia {
                    if tesoro &lt; sum {
                        ticket--;
                        if ticket &lt;= 0 {
                            instance_destroy();
                        }
                    }
                    else {
                        chilla = random(m_delay_voz);
                    }
                }
            }
        }
        // contratar minero
        var vict;
        if s_solo(m_culpa_codicia) {
            vict = collision_circle(x, y, m_vision * m_visimax_p / 2, o_alma, true, false);
        }
        else {
            vict = collision_circle(x, y, m_vision / 2, o_alma, true, false);
        }
        if vict != noone {
            if vict.culpa != m_culpa_codicia {
                vict.culpa = m_culpa_codicia;
                vict.minax = vict.x;
                vict.minay = vict.y;
                vict.tesoro = s_minar(vict.x, vict.y);
                vict.ticket = 4;
                vict.chilla = random(m_delay_voz);
            }
        }
    }
}
// cambio de direccion dentro de lugar de mineria
reloj_errar -= dlt;
if reloj_errar &lt;= 0 {
    reloj_errar = random_range(1, 4);
    direction += random_range(-90, 90);
}
// colision con objetos, luego ejecutar IA
if s_colisiones(id) and despierto {
    // ir a lugar de mineria y recoger oro ahi
    if point_distance(x, y, minax, minay) &gt; m_vision {
        direction = point_direction(x, y, minax, minay);
    }
    else {
        // recoger oro
        var oro = instance_place(x, y, o_oro);
        if oro != noone {
            with oro {
                instance_destroy();
            }
        }
    }
    var v = m_velocidad * dlt;
    x += lengthdir_x(v, direction);
    y += lengthdir_y(v, direction);
}
// prevenir salirse del mundo
s_limites(id);

</string>
