          <argument>
            <kind>1</kind>
            <string>if visible and arte {
    var esc = m_width_libro / view_wview[0];
    over = point_in_rectangle((mouse_x - view_xview[0]) * esc,
        (mouse_y - view_yview[0]) * esc,
        x - 40, y - 16,x + 40, y + 16,);
    if over {
        if mouse_check_button_pressed(mb_left) {
            if tipo == m_hoj_exit {
                s_see_puzzle(false);
            }
            else if selected {
                selected = false;
            }
            else {
                var utr = noone;
                with o_hoja {
                    if selected {
                        utr = id;
                        break;
                    }
                }
                if utr == noone {
                    // primero que se selecciona, si tiene texto
                    if datos != -1 {
                        selected = true;
                    }
                }
                else if datos == -1 and utr.tipo != m_hoj_help {
                    // hacer trueque de textos
                    datos = utr.datos;
                    utr.selected = false;
                    utr.datos = -1;
                    selected = false;
                    // verificaciones de gano
                    var sum = 0;
                    with o_hoja {
                        if tipo == m_hoj_libro and datos == verificar {
                            sum++;
                        }
                    }
                    if sum == 27 {
                        o_control.triunfo = true;
                        audio_play_sound(a_triunfo, 100, false);
                        ini_open("configuracion.ini");
                        ini_write_string("config", "triunfo", "1");
                        ini_close();
                        with o_hoja {
                            if tipo == m_hoj_pool {
                                instance_destroy();
                            }
                        }
                    }
                }
                else if datos != -1 {
                    // cambia de seleccionado, si tiene texto
                    utr.selected = false;
                    selected = true;
                }
            }
        }
    }
}

